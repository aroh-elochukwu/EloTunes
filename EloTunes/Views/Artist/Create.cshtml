@model Artist

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Artist</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"> Name </label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Nationality"> Nationality </label>
            <input asp-for="Nationality" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DateOfBirth"> Date of Birth </label>
            <input asp-for="DateOfBirth" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add </button>
        <a asp-controller="Artist" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>

    </div>

</form>